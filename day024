#Game dado infinito, o usuÃ¡rio deve escolher quantos lados terÃ¡ o dado e serÃ¡ "girado" o dado


import random

print("Infinite Dice ðŸŽ²")
print()

def rollDice(sides):
  while True:
    n = random.randint(1, sides)
    print(f"You rolled {n}")
    a = input("Run again? yes/no -> ")
    if a == "yes":
      continue
    elif a == "no":
      print("Thank you")
      break
    else:
      print("Invalid option, exiting the programm...")
      break

dice = int(input("How many sides of dice? "))
rollDice(dice)
