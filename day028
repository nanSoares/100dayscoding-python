import random, os, time

def round1(name1, name2, hp1, hp2):
  print("The battle begins!")
  p1 = rollDice()
  p2 = rollDice()
  d = damage(strength1, strength2)
  if p1 >= p2:
    print(f"{name1} wins the first blow")
    print(f"{name2} takes a hit, with {d} damage")
    hp2 -= d
    print()
    print(f"{name1}")
    print(f"HEALTH: {hp1}")
    print()
    print(f"{name2}")
    print(f"HEALTH: {hp2}")
  else:
    print(f"{name2} wins the first blow")
    print(f"{name1} takes a hit, with {d} damage")
    hp1 -= d
    print()
    print(f"{name1}")
    print(f"HEALTH: {hp1}")
    print()
    print(f"{name2}")
    print(f"HEALTH: {hp2}")
  return hp1, hp2

def round2(name1, name2, hp1, hp2):
  print("The battle continues!")
  p1 = rollDice()
  p2 = rollDice()
  d = damage(strength1, strength2)
  if p1 >= p2:
    print(f"{name2} takes a hit, with {d} damage")
    hp2 -= d
    print()
